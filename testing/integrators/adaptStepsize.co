network net;

roessler_omega = 0.89;
roessler_a = 0.165;
roessler_b = 0.2;
roessler_c = 10.0;



samplingTime = 0.1;

odeAbsError = 0.0;
odeRelError = 0.0;


net.addNode(roessler());
net.setState(0, 0.0, 0.0, 0.0 );

net.observeTime("output/adaptStepsize.co.series");
net.observe(0,"output/adaptStepsize.co.series",component(0));
net.observe(0,"output/adaptStepsize.co.series",component(1));
net.observe(0,"output/adaptStepsize.co.series",component(2));

net.evolve(0.0,1500.0);

net.clear();


odeAbsError = 0.00000000000001;
odeRelError = 0.00000000000001;



int nodeNumber;


nodeNumber = net.addNode(roessler());
net.setState(nodeNumber, 0.0, 0.0, 0.0 );

net.observeTime("output/adaptStepsize.co.series2");
net.observe(nodeNumber,"output/adaptStepsize.co.series2",component(0));
net.observe(nodeNumber,"output/adaptStepsize.co.series2",component(1));
